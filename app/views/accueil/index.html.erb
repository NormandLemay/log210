<%= stylesheet_link_tag "filename" %>

<!DOCTYPE html>
<html>
    <head>
      <meta charset="UTF-8">
      <title>LOG210 Equipe 9</title>
      <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js" %>

      <script type="text/javascript">
          $(document).ready(function restaurantChoisi() {
              <% @restaurant.each do |restaurant| %>
              if ("<%= restaurant.nom %>" == $("#restaurant_id option:selected").val()) {
                  alert("bob");
                  document.getElementById("menu_id").innerHTML = "<%=displayMenuItems(restaurant)%>"
              }
              <% end %>
          });
      </script>

    </head>
    <body>
        <div id="nav">
          <p class="title">"insérer nom ici"</p>
          <ul id="navigation">
            <li id="boutonInscription"><%= content_tag(:button, "Inscription", :type => :submit) %></li>
            <li class="boutonLabel">Nouveau client?</li>
            <li id="boutonConnexion"><%= content_tag(:button, "Connexion", :type => :submit) %></li>
            <li class="boutonLabel">Déjà inscrit?</li>
          </ul>
        </div>

        <div id="bodycommande">
          <div id="commande">
            <ul id="ulcommande">
              <li id="boutonCommande"><%= content_tag(:button, "Commander", :type => :submit) %></li>
              <li class="boutonLabel">Prêt à commander?</li>
              <li class="boutonLabel">
                <select id="restaurant_id" onChange="restaurantChoisi()">
                  <option value=0></option>
                  <% @restaurant.each do |r| %>
                      <option>
                        <%= r.nom %>
                      </option>
                  <% end %>
                </select>
              </li>
              <li class="boutonLabel"> Restaurants participants:</li>
            </ul>
          </div>
          <p><%= image_tag("logo.png", :alt => "logo", height: '250', width: '250') %></p>

          <div class="menu" id="menu_id">
            <p> Section menu </p>
          </div>

        </div>
    </body>
</html>
